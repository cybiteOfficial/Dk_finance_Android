<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/card_background"
    android:layout_marginBottom="16dp">

    <!-- Application ID and Actual ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Application ID -->
        <TextView
            android:id="@+id/application_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application ID: "
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/actual_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Vertical Space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <!-- Applicant Name -->
    <TextView
        android:id="@+id/ro_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:visibility="visible"/>

    <!-- Customer Type -->
    <TextView
        android:id="@+id/creation_date_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:visibility="visible"/>

    <!-- Vertical Space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <!-- Horizontal Layout for Loan Status and Vertical Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <!-- Vertical Linear Layout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Loan Amount Text -->
            <TextView
                android:id="@+id/loan_amount_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Amount:"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <!-- Actual Loan Amount -->
            <TextView
                android:id="@+id/loan_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹10,000"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Loan Status -->
        <TextView
            android:id="@+id/loan_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="4dp"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:textColor="@color/green_completed"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
