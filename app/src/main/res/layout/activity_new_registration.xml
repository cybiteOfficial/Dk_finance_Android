<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Box at the top of the screen -->
    <RelativeLayout
        android:id="@+id/topBox"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#1A7A306c"
        android:padding="20dp"
        android:paddingTop="20dp">

        <!-- Home button on the left -->
        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_back"/>

        <!-- Text in the center -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Lead Generation"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        app:cardElevation="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:background="@color/white"
                android:elevation="0dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="First Name"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:elevation="4dp"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:singleLine="true"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Last Name"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:elevation="4dp"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:singleLine="true"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Mobile Number"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:gravity="left" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Country Code TextView -->
                    <TextView
                        android:id="@+id/countryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="+91"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="5dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"/>

                    <!-- Phone Number EditText -->
                    <EditText
                        android:id="@+id/phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_border"
                        android:digits="0123456789"
                        android:drawablePadding="8dp"
                        android:elevation="4dp"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textColor="@android:color/black"
                        android:maxLength="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>
                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Product Type"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:gravity="left" />
                <Spinner
                    android:id="@+id/productType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_spinner_background"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:hint="Select"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Case Tag"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:gravity="left" />
                <Spinner
                    android:id="@+id/caseTag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_spinner_background"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:hint="Select" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Customer type"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:gravity="left" />
                <Spinner
                    android:id="@+id/customerType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_spinner_background"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:hint="Select" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Agent code"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/agentCode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_border_fixed"
                    android:drawablePadding="8dp"
                    android:text="DKFE001"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:elevation="4dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Branch Code"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/branchCode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_border_fixed"
                    android:drawablePadding="8dp"
                    android:text="DKF001"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:elevation="4dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:editable="false"
                    android:focusable="false"
                    tools:ignore="Deprecated"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Loan Amount"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:gravity="left" />

                <EditText
                    android:id="@+id/loanAmount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_border"
                    android:digits="0123456789"
                    android:drawablePadding="8dp"
                    android:elevation="4dp"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:maxLength="15"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Date (DD/MM/YY)"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:gravity="left" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_border_fixed"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:inputType="date"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Time"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:gravity="left" />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_border_fixed"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:inputType="date"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />



            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/save_button"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="SAVE"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primary"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>