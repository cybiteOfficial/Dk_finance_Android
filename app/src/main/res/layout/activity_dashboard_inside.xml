<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customerNameLayout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topBox"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#1A7A306c"
        android:padding="20dp"
        android:paddingTop="20dp">

        <!-- Home button on the left -->
        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_add_home_24"
            android:background="@drawable/home_button_background"/>

        <!-- Text and ID in the center -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/applicationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Application ID"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/applicationID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>



    <!-- ScrollView to make the layout scrollable -->
    <ScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <!-- LinearLayout to contain the scrollable content -->
        <LinearLayout
            android:id="@+id/scrollLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/dasboardItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:elevation="0dp">
                <TextView
                    android:id="@+id/createCustomerPageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_dashboard_inside"
                    android:drawablePadding="8dp"
                    android:text="Create Customer"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:singleLine="true"
                    android:drawableEnd ="@drawable/eclipse_1_svgrepo_com"
                    />
                <TextView
                    android:id="@+id/loanDetailsPageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_dashboard_inside"
                    android:drawablePadding="8dp"
                    android:text="Loan Details"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:singleLine="true"
                    android:drawableEnd ="@drawable/eclipse_1_svgrepo_com"
                    />
                <TextView
                    android:id="@+id/documentsPageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_dashboard_inside"
                    android:drawablePadding="8dp"
                    android:text="Documents"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:singleLine="true"
                    android:drawableEnd ="@drawable/eclipse_1_svgrepo_com"
                    />
                <TextView
                    android:id="@+id/photographsPageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_dashboard_inside"
                    android:drawablePadding="8dp"
                    android:text="Photographs"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:singleLine="true"
                    android:drawableEnd ="@drawable/eclipse_1_svgrepo_com"
                    />
                <TextView
                    android:id="@+id/collateralDetailsPageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_dashboard_inside"
                    android:drawablePadding="8dp"
                    android:text="Collateral Details"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:singleLine="true"
                    android:drawableEnd ="@drawable/eclipse_1_svgrepo_com"
                    />
                <TextView
                    android:id="@+id/customerAppFormPageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box_dashboard_inside"
                    android:drawablePadding="8dp"
                    android:text="Customer App Form"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:singleLine="true"
                    android:drawableEnd ="@drawable/eclipse_1_svgrepo_com"
                    />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>



</LinearLayout>