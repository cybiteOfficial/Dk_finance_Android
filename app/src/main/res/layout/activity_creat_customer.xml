<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


  <!-- Box at the top of the screen -->
  <RelativeLayout
      android:id="@+id/topBox"
      android:layout_width="match_parent"
      android:layout_height="96dp"
      android:background="#1A7A306c"
      android:padding="20dp"
      android:paddingTop="20dp">

    <!-- Home button on the left -->
    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_add_home_24"
        android:background="@drawable/home_button_background"/>

    <!-- Text in the center -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Create Customer"
        android:textColor="@color/primary"
        android:textSize="18sp"
        android:textStyle="bold"/>
  </RelativeLayout>

  <!-- Image view -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginTop="20dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:src="@drawable/upload_img"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openFileChooser" />
  </LinearLayout>

  <!-- CardView containing form fields -->
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_margin="20dp"
      app:cardElevation="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center_horizontal"
          android:padding="2dp"
          android:background="@color/white"
          android:elevation="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:layout_marginTop="15dp"
            android:text="Role"
            android:textSize="16sp"
            android:gravity="left" />
        <Spinner
            android:id="@+id/role"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:elevation="4dp" />

        <!-- Gender and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="Gender"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_spinner_background"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:elevation="4dp"/>
          </LinearLayout>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_marginStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="Title"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_marginTop="10dp"/>

            <Spinner
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_spinner_background"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:elevation="4dp"
                />
          </LinearLayout>
        </LinearLayout>

        <!-- First, Middle, Last Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="First Name"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:gravity="left" />

        <EditText
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:elevation="4dp"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="28"
            android:singleLine="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Middle Name"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:gravity="left" />

        <EditText
            android:id="@+id/customerMiddleName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="28"
            android:singleLine="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Last Name"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:gravity="left" />

        <EditText
            android:id="@+id/customerLastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="28"
            android:singleLine="true"/>

        <!-- DOB and Age -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="Date of Birth"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/dobEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_border"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:elevation="4dp"
                android:focusable="false"
                android:drawableEnd="@drawable/baseline_calendar_month_24"
                />

          </LinearLayout>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_marginStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="Age"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_border"
                android:digits="0123456789"
                android:drawablePadding="8dp"
                android:elevation="4dp"
                android:inputType="number"
                android:maxLength="3"
                android:padding="8dp"
                android:textColor="@android:color/black" />
          </LinearLayout>
        </LinearLayout>

        <!-- Customer Segment, Industry, Occupation, Source of Income -->


<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textColor="@color/primary"-->
<!--            android:text="Industry"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:textSize="16sp"-->
<!--            android:gravity="left" />-->

<!--        <EditText-->
<!--            android:id="@+id/industry"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:background="@drawable/edit_text_border"-->
<!--            android:drawablePadding="8dp"-->
<!--            android:padding="8dp"-->
<!--            android:textColor="@android:color/black"-->
<!--            android:elevation="4dp"-->
<!--            android:inputType="text"-->
<!--            android:maxLength="20"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Number of Dependents"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:gravity="left" />

        <EditText
            android:id="@+id/noOfDependents"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:elevation="4dp"
            android:inputType="number"
            android:maxLength="3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Source of Income"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:gravity="left" />

        <EditText
            android:id="@+id/sourceOfIncome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="50"
            android:singleLine="true"/>
            />

        <!-- Monthly Income, Family Income -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Monthly Income"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:gravity="left" />

        <EditText
            android:id="@+id/income"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:digits="0123456789"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Monthly Family Income"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:gravity="left" />

        <EditText
            android:id="@+id/familyIncome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_border"
            android:digits="0123456789"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@android:color/black" />

        <!-- Residence Owner, Agriculture Land Owner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:layout_marginTop="15dp"
            android:text="Residence Ownership"
            android:textSize="16sp"
            android:gravity="left" />
        <Spinner
            android:id="@+id/residenceOwner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:elevation="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Agricultural Land"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:gravity="left" />
        <Spinner
            android:id="@+id/agricultureLandOwner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:elevation="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Education Qualification"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:gravity="left" />
        <Spinner
            android:id="@+id/educationQualification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:elevation="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="Customer Segment"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:gravity="left" />
        <Spinner
            android:id="@+id/customer_segment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:elevation="4dp" />

      </LinearLayout>
    </ScrollView>
  </androidx.cardview.widget.CardView>

  <!-- Buttons -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="20dp"
      android:gravity="center_horizontal">

    <Button
        android:id="@+id/save_button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/white"
        android:text="SAVE"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        android:textStyle="bold"
        android:layout_gravity="bottom|left"/>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/primary"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        android:textStyle="bold"
        android:layout_gravity="bottom|right"/>
  </LinearLayout>

</LinearLayout>
