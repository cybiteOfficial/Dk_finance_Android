<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Section -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- User Profile ImageView -->
        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@drawable/icon_menu" />

        <!-- Dashboard TextView -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#703273"
            android:textAlignment="center"/>

        <!-- Support ImageView -->
        <ImageView
            android:id="@+id/support"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_support"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- Services Title -->
    <TextView
        android:id="@+id/services_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_section"
        android:layout_marginStart="26dp"
        android:text="Services"
        android:textSize="18sp"
        android:textColor="#703273"
        android:textStyle="bold"/>

    <!-- Center Section -->
    <GridLayout
        android:id="@+id/center_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/services_title"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:rowOrderPreserved="false">

        <!-- Button 1: Open Account -->
        <LinearLayout
            android:id="@+id/open_account_btn"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:background="@drawable/squarish_button_background"
            android:focusable="true">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_open_account"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_account"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Button 2: Approved Loans -->
        <LinearLayout
            android:id="@+id/approved_loans_btn"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/squarish_button_background">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_approved_loans"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved Loans"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Button 3: Rejected Loans -->
        <LinearLayout
            android:id="@+id/rejected_loans_btn"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/squarish_button_background">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_rejected_loans"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejected Loans"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Button 4: Failed Payments -->
        <LinearLayout
            android:id="@+id/failed_payments_btn"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/squarish_button_background">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_failed_payments"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Failed Payments"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Button 5: Leads -->
        <LinearLayout
            android:id="@+id/leads_btn"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/squarish_button_background">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_leads"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leads"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Button 6: All -->
        <LinearLayout
            android:id="@+id/all_btn"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/squarish_button_background">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_all"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:textAlignment="center"/>
        </LinearLayout>
    </GridLayout>
</RelativeLayout>
