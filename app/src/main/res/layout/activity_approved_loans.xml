<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <!-- Top Section -->
    <RelativeLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@drawable/icon_back" />

        <!-- Dashboard TextView -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#703273"
            android:gravity="center"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <!-- Spinner -->
    <Spinner
        android:id="@+id/page_spinner"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_section"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/white"/>

    <!-- Linear Layout for Search Bar and Sort Icon -->
    <LinearLayout
        android:id="@+id/search_sort_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_spinner"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp">

        <!-- Search Bar -->
        <RelativeLayout
            android:id="@+id/search_bar_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_border">

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>

            <!-- Search EditText -->
            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/search_icon"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:hint="Search"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/black"
                android:background="@drawable/edit_text_search"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <!-- Sort Icon -->
        <ImageView
            android:id="@+id/sort_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="false"
            android:src="@drawable/icon_sort"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <!-- Scroll View for Cards -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_sort_layout"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Adding cards dynamically here -->

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
